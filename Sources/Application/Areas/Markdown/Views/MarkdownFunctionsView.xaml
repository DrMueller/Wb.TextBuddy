<UserControl x:Class="Mmu.Wb.TextBuddy.Areas.Markdown.Views.MarkdownFunctionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:textEdit="clr-namespace:Mmu.Wb.TextBuddy.Infrastructure.Controls.TextEdit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
 <Grid>
  <textEdit:TextEditControl
   Commands="{Binding Commands, Mode=OneWay}"
   Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
 </Grid>
</UserControl>